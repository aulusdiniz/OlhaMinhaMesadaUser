<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/fundo" >
    
	<FrameLayout
    android:id="@+id/fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="6dp" 
	android:layout_marginRight="6dp" />

    <Button
        android:id="@+id/btn_ic_rolagem1"
        android:layout_width="125dp"
        android:layout_height="124dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_rolagem1" />

    <Button
        android:id="@+id/btn_pesquisar_parlamentar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_above="@+id/btn_ranking"
        android:layout_toRightOf="@+id/btn_ranking"
        android:background="@drawable/pesquisa" />

    <Button
        android:id="@+id/btn_ranking"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_above="@+id/btn_sobre_main"
        android:layout_alignLeft="@+id/btn_sobre_main"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="18dp"
        android:background="@drawable/ranking" />

    <Button
        android:id="@+id/btn_sobre_main"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btn_ic_rolagem1"
        android:background="@drawable/sobre" />

    <Button
        android:id="@+id/btn_politico_main"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_above="@+id/btn_ic_rolagem1"
        android:layout_alignParentRight="true"
        android:background="@drawable/politico" />

</RelativeLayout>