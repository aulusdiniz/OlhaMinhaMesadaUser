<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageV_parlamentar_listagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/politico" />

    <TextView
        android:id="@+id/textV_listar_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageV_parlamentar_listagem"
        android:layout_marginBottom="21dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/imageV_parlamentar_listagem"
        android:text="Ramon"
        android:textSize="25sp" />

</RelativeLayout>